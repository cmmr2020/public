<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="form-user">
    <view class="cu-form-group">
      <view class="title">
        <text class="cuIcon-mobile text-{{bgColor}} "></text>
      </view>
      <input class="tui-input" name="name" placeholder="请输入账号" maxlength="50" type="text" style="font-size:{{fontSize}}rpx" confirm-type="done"></input>
    </view>
    <view class="cu-form-group">
      <view class="title">
        <text class="cuIcon-unlock text-{{bgColor}} "></text>
      </view>
      <input password class="tui-input" name="pwd" placeholder="请输入密码" maxlength="50" type="text" style="font-size:{{fontSize}}rpx" confirm-type="done" />
    </view>
  </view>
  <view class="tui-btn-box">
    <button class="btn-primary bg-{{bgColor}}" hover-class="btn-hover" formType="submit" type="primary" style="font-size:{{fontSize}}rpx">提交</button>
    <button class="btn-primary btn-gray" hover-class="btn-gray-hover" formType="reset" style="font-size:{{fontSize}}rpx">重置</button>
  </view>

</form>